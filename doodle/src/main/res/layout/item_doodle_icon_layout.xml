<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/lib_dpi"
    android:background="@drawable/doodle_item_selector"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/lib_hdpi"
    android:paddingBottom="@dimen/lib_sdpi">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lib_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="@dimen/lib_ldpi"
        android:scaleType="fitCenter"
        tools:src="@drawable/doodle_eraser" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lib_text_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/doodle_color"
        tools:text="!!橡皮擦!!" />

</LinearLayout>