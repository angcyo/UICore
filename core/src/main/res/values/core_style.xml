<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LibSingleEditStyle" parent="LibBodyTextStyle">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">@dimen/lib_item_min_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:drawablePadding">@dimen/lib_xhdpi</item>
        <item name="android:padding">@dimen/lib_hdpi</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">100</item>
        <item name="r_drawable_height">"1dp"</item>
        <item name="r_hide_soft_input_on_detached">true</item>
    </style>

    <!--账号输入框样式-->
    <style name="LibUserNameStyle" parent="LibBodyTextStyle">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">@dimen/lib_item_min_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:drawablePadding">@dimen/lib_xhdpi</item>
        <item name="android:padding">@dimen/lib_hdpi</item>
        <item name="android:background">@null</item>
        <item name="android:hint">请输入账号</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">20</item>
        <item name="r_drawable_height">"1dp"</item>
        <item name="r_focus_drawable">@drawable/lib_bottom_focus_shape</item>
        <item name="r_no_focus_drawable">@drawable/lib_bottom_no_focus_shape</item>
        <item name="r_hide_soft_input_on_detached">true</item>
    </style>

    <!--密码输入框样式-->
    <style name="LibPasswordStyle" parent="LibUserNameStyle">
        <item name="android:inputType">textWebPassword</item>
        <item name="android:hint">请输入密码</item>
        <item name="r_show_password_on_touch">true</item>
        <item name="r_is_password_drawable">true</item>
        <item name="r_clear_drawable">@drawable/lib_password_selector</item>
    </style>

    <!--具有[focus_drawable]样式的输入框-->
    <style name="LibFocusSingleEditStyle" parent="LibSingleEditStyle">
        <item name="android:background">@null</item>
        <item name="r_focus_drawable">@drawable/lib_bottom_focus_shape</item>
        <item name="r_no_focus_drawable">@drawable/lib_bottom_no_focus_shape</item>
    </style>

</resources>