<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="r_progress_color" format="color" />

    <!--不影响原来背景的背景-->
    <attr name="r_background" format="reference|color" />

    <!--支持格式0.3pw 0.5ph: p表示[parent]的多少倍数, 0.3sw 0.5sh: s表示[screen]的多少倍数, 支持dp dip sp-->
    <attr name="r_max_height" format="string|dimension" />
    <attr name="r_max_width" format="string|dimension" />
    <attr name="r_min_height" format="string|dimension" />
    <attr name="r_min_width" format="string|dimension" />
    <attr name="r_layout_height" format="string|dimension" />
    <attr name="r_layout_width" format="string|dimension" />

    <attr name="r_clip_to_outline" format="boolean" />
    <attr name="r_layout_mask_drawable" format="reference|color" />
    <!--宽高的比例[1:1] [1:2.5], 宽高必须有一个要是1f-->
    <attr name="r_dimension_ratio" format="string" />

    <!--宽高是否相等-->
    <attr name="r_is_aeq_width" format="boolean" />

    <attr name="r_clip_type" format="flags">
        <flag name="CLIP_TYPE_NONE" value="0" />
        <flag name="CLIP_TYPE_DEFAULT" value="1" />
        <flag name="CLIP_TYPE_ROUND" value="2" />
        <flag name="CLIP_TYPE_CIRCLE" value="3" />
        <flag name="CLIP_TYPE_RECT" value="4" />
    </attr>
    <attr name="r_clip_radius" format="dimension" />

    <!--相同[Layout]属性代理读取设置¬-->
    <declare-styleable name="ClipLayoutDelegate">
        <attr name="r_clip_type" />
        <attr name="r_clip_radius" />
    </declare-styleable>

    <declare-styleable name="RLayoutDelegate">
        <attr name="r_background" />
        <attr name="r_max_height" />
        <attr name="r_max_width" />
        <attr name="r_min_height" />
        <attr name="r_min_width" />
        <attr name="r_layout_width" />
        <attr name="r_layout_height" />
        <attr name="r_clip_to_outline" />
        <attr name="r_layout_mask_drawable" />
        <attr name="r_dimension_ratio" />
    </declare-styleable>

