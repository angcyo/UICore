<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ShapeImageView">
        <attr name="r_image_radius" format="dimension" />
        <attr name="r_draw_border" />
        <attr name="r_enable_shape" format="boolean" />
        <attr name="r_border_width" />
        <attr name="r_border_color" />
        <attr name="r_mask_drawable" format="reference" />
        <attr name="r_is_circle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DslImageView">
        <attr name="r_show_touch_mask" format="boolean" />
        <attr name="r_touch_mask_drawable" format="reference|color" />

        <!--根据gravity自动取负值-->
        <attr name="r_overlay_drawable_offset_x" format="dimension" />
        <attr name="r_overlay_drawable_offset_y" format="dimension" />
        <attr name="r_overlay_drawable_lt" format="reference" />
        <attr name="r_overlay_drawable_rt" format="reference" />
        <attr name="r_overlay_drawable_lb" format="reference" />
        <attr name="r_overlay_drawable_rb" format="reference" />
        <attr name="r_overlay_drawable_center" format="reference" />

        <!--角标属性-->
        <attr name="r_draw_badge" />
        <attr name="r_badge_solid_color" />
        <attr name="r_badge_text_color" />
        <attr name="r_badge_circle_radius" />
        <attr name="r_badge_radius" />
        <attr name="r_badge_gravity" />
        <attr name="r_badge_offset_x" />
        <attr name="r_badge_offset_y" />
        <attr name="r_badge_circle_offset_x" />
        <attr name="r_badge_circle_offset_y" />
        <attr name="r_badge_padding_left" />
        <attr name="r_badge_padding_right" />
        <attr name="r_badge_padding_top" />
        <attr name="r_badge_padding_bottom" />
        <attr name="r_badge_text" />
        <attr name="r_badge_text_size" />
        <attr name="r_badge_bg_drawable" />
        <attr name="r_badge_text_offset_x" />
        <attr name="r_badge_text_offset_y" />
        <!--end...-->

    </declare-styleable>
</resources>