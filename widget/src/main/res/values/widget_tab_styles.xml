<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标准Tab的样式-->
    <style name="LibTabLayoutStyle">
        <item name="tab_enable_text_color">true</item>
        <item name="tab_enable_gradient_color">true</item>
        <item name="tab_select_color">@color/colorAccent</item>
        <item name="tab_deselect_color">@color/text_general_color</item>

        <item name="tab_enable_text_bold">false</item>

        <item name="tab_enable_gradient_text_size">true</item>
        <item name="tab_text_min_size">@dimen/text_body_size</item>
        <item name="tab_text_max_size">@dimen/text_body_size</item>

        <item name="tab_indicator_gradient_start_color">@color/colorPrimary</item>
        <item name="tab_indicator_gradient_end_color">@color/colorPrimaryDark</item>
        <item name="tab_indicator_radius">@dimen/lib_radius_normal</item>

        <item name="tab_indicator_height">4dp</item>
        <item name="tab_indicator_width">MATCH_PARENT</item>

        <item name="tab_enable_gradient_scale">false</item>
        <item name="tab_min_scale">0.8</item>
        <item name="tab_max_scale">1</item>
    </style>

    <!--底部导航Tab的样式-->
    <style name="LibTabCommonStyle" parent="LibTabLayoutStyle">
        <item name="tab_indicator_style">STYLE_NONE</item>
        <item name="tab_item_is_equ_width">true</item>
    </style>

    <!--Segment样式-->
    <style name="LibTabSegmentStyle">
        <!--去掉指示器-->
        <item name="tab_indicator_style">STYLE_NONE</item>
        <!--选中/未选中颜色-->
        <item name="tab_select_color">@color/lib_white</item>
        <item name="tab_deselect_color">@color/colorAccent</item>
        <!--边框圆角/颜色/描边/填充-->
        <item name="tab_border_radius_size">@dimen/lib_radius_max</item>
        <item name="tab_border_solid_color">@color/lib_white</item>
        <item name="tab_border_stroke_color">@color/colorAccent</item>
        <!--激活边框-->
        <item name="tab_draw_border">true</item>
        <!--等宽-->
        <item name="tab_item_is_equ_width">true</item>
        <!--激活分割线-->
        <item name="tab_draw_divider">true</item>
    </style>

</resources>