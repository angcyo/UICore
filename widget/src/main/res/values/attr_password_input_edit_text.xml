<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PasswordInputEditText">
        <!--密码的长度-->
        <attr name="r_password_count" format="integer"/>

        <!--绘制密码的width, height缩放比例-->
        <attr name="r_password_draw_size_scale" format="float"/>

        <!--密码之间的间隙-->
        <attr name="r_password_space" format="dimension"/>

        <!--激活键盘输入-->
        <attr name="r_enable_password_input" format="boolean"/>

        <!--密码框的大小-->
        <attr name="r_password_size" format="dimension"/>
        <attr name="r_password_width" format="dimension"/>
        <attr name="r_password_height" format="dimension"/>

        <!--密码边框的宽度-->
        <attr name="r_password_border_width" format="dimension"/>

        <!--高亮的颜色-->
        <attr name="r_password_highlight_color" format="color"/>

        <!--密码框背景颜色-->
        <attr name="r_password_bg_color" format="color"/>

        <!--密码提示颜色-->
        <attr name="r_password_color" format="color"/>

        <!--密码提示框的颜色-->
        <attr name="r_password_border_color" format="color"/>
        <attr name="r_show_highlight" format="boolean"/>
        <attr name="r_password_tip_type" format="enum">
            <enum name="TIP_TYPE_CIRCLE" value="1"/>
            <enum name="TIP_TYPE_RECT" value="3"/>
            <enum name="TIP_TYPE_RAW" value="2"/>
        </attr>
    </declare-styleable>
</resources>