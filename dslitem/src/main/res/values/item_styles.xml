<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="lib_item_label_min_width">75dp</dimen>
    <dimen name="lp_item_label_min_width">120dp</dimen>
    <dimen name="lib_check_box_size">18dp</dimen>
    <dimen name="lib_keyboard_size">50dp</dimen>
    <dimen name="lib_new_icon_size">18dp</dimen>
    <dimen name="lib_direction_icon_size">24dp</dimen>

    <dimen name="lib_step_adjust_stroke_width">2dp</dimen>
    <dimen name="lib_step_adjust_radius">6dp</dimen>
    <dimen name="lib_step_adjust_padding">6dp</dimen>
    <dimen name="lib_step_adjust_width">36dp</dimen>
    <dimen name="lib_step_adjust_value_width">50dp</dimen>
    <dimen name="lib_step_adjust_height">30dp</dimen>
    <color name="lib_step_adjust_tint_disable_color">@color/bg_sub_color</color>
    <color name="lib_step_adjust_tint_color">@color/text_general_color</color>
    <dimen name="lib_increment_height">38dp</dimen>
    <dimen name="lib_increment_edit_width">110dp</dimen>

    <!--显示时, 标签的样式-->
    <style name="ItemLabelStyle" parent="LibSubTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/lib_item_label_min_width</item>
        <item name="android:paddingLeft">@dimen/lib_padding_left</item>
        <item name="android:paddingTop">@dimen/lib_xhdpi</item>
        <item name="android:paddingBottom">@dimen/lib_xhdpi</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">@dimen/text_body_size</item>
    </style>

    <!--LaserPecker显示时, 标签的样式-->
    <style name="LPItemLabelStyle" parent="ItemLabelStyle">
        <item name="android:textColor">@color/lib_text_color</item>
        <item name="android:minWidth">@dimen/lp_item_label_min_width</item>
    </style>

    <style name="ItemEditStyle" parent="LibBodyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/lib_padding_left</item>
        <item name="android:paddingRight">@dimen/lib_padding_right</item>
        <item name="android:paddingTop">@dimen/lib_xhdpi</item>
        <item name="android:paddingBottom">@dimen/lib_xhdpi</item>
        <item name="android:minHeight">@dimen/lib_item_min_height</item>
        <item name="android:background">@null</item>
        <item name="r_hide_soft_input_on_lost_focus">true</item>
    </style>

    <style name="ItemRightIcoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/lib_padding_right</item>
        <item name="android:background">@drawable/lib_bg2_selector</item>
        <item name="android:clickable">false</item>
    </style>

    <!--表单填写时的标签样式-->
    <style name="FormItemLabelStyle" parent="ItemLabelStyle">
        <item name="android:textColor">@color/text_primary_color</item>
    </style>
</resources>