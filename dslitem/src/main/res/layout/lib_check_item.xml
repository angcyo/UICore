<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lib_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/lib_xhdpi"
    android:paddingStart="@dimen/lib_padding_left"
    android:paddingEnd="@dimen/lib_padding_right">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lib_check_view"
        android:layout_width="23dp"
        android:layout_height="23dp"
        tools:src="@drawable/lib_check_selector" />

    <com.angcyo.widget.text.DslTextView
        android:id="@+id/lib_text_view"
        style="@style/LibTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/lib_hdpi"
        tools:text="选中的文本提示选中的文本提示选中的文本提示选中的文本提示" />

</LinearLayout>