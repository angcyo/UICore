<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/lib_hdpi"
    android:paddingVertical="@dimen/lib_hdpi">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/plus_minus_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginRight="@dimen/lib_hdpi"
        android:background="@drawable/lib_keyboard_number_increment_selector"
        android:gravity="center"
        android:text="±"
        android:textColor="@color/lib_dark_gray"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/minus_increment_view"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/minus_increment_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/lib_keyboard_number_increment_selector"
        android:gravity="center"
        android:text="－"
        android:textColor="@color/lib_dark_gray"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/plus_minus_view"
        app:layout_constraintRight_toLeftOf="@id/plus_increment_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/plus_increment_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/lib_hdpi"
        android:background="@drawable/lib_keyboard_number_increment_selector"
        android:gravity="center"
        android:text="＋"
        android:textColor="@color/lib_dark_gray"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/minus_increment_view"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>