<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.widget.layout.RConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_bg2_selector"
    android:padding="@dimen/lib_hdpi"
    tools:background="@color/transparent40">

    <com.angcyo.widget.image.DslImageView
        android:id="@+id/lib_image_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/web_menu_circle_border_shape"
        android:padding="@dimen/lib_xhdpi"
        android:scaleType="fitCenter"
        app:layout_constrainedWidth="true"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:r_badge_offset_x="12dp"
        app:r_badge_offset_y="12dp"
        app:r_draw_badge="true"
        app:r_enable_shape="false"
        tools:r_badge_text="9"
        tools:src="@drawable/lib_ic_succeed" />

    <com.angcyo.widget.text.DslTextView
        android:id="@+id/lib_text_view"
        style="@style/LibSubTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:paddingLeft="@dimen/lib_hdpi"
        android:paddingRight="@dimen/lib_hdpi"
        android:textColor="@color/web_menu_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lib_image_view"
        tools:text="angcyo汉字" />

</com.angcyo.widget.layout.RConstraintLayout>