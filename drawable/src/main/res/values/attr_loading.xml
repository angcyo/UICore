    <attr name="r_loading_radar_color" format="color" />
    <attr name="r_loading_radar_scan_color" format="color" />

    <declare-styleable name="RadarScanLoadingDrawable">
        <attr name="r_loading_step" />
        <attr name="r_loading_radar_radius" />
        <attr name="r_loading_radar_radius_increase" />
        <attr name="r_loading_radar_width" />
        <attr name="r_loading_radar_color" />
        <attr name="r_loading_radar_scan_color" />
    </declare-styleable>

