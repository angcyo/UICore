<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="r_loading_circle_radius" format="dimension" />
    <attr name="r_loading_circle_color" format="color" />
    <attr name="r_loading_step" format="integer" />

    <declare-styleable name="CircleScaleLoadingDrawable">
        <attr name="r_loading_circle_radius" />
        <attr name="r_loading_circle_color" />
        <attr name="r_loading_step" />
    </declare-styleable>

    <attr name="r_loading_item_width" format="dimension" />
    <attr name="r_loading_item_height" format="dimension" />
    <attr name="r_loading_item_round" format="dimension" />
    <attr name="r_loading_item_gap" format="dimension" />
    <attr name="r_loading_item_color" format="color" />

    <declare-styleable name="PostLoadingDrawable">
        <attr name="r_loading_item_width" />
        <attr name="r_loading_item_height" />
        <attr name="r_loading_item_round" />
        <attr name="r_loading_item_color" />
        <attr name="r_loading_item_gap" />
        <attr name="r_loading_step" />
    </declare-styleable>

    <attr name="r_loading_radar_radius" format="dimension" />
