<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.angcyo.glide.GlideImageView
        android:id="@+id/lib_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:r_draw_border="false"
        app:r_enable_shape="true"
        app:r_image_radius="@dimen/lib_radius_common2"
        app:srcCompat="@color/lib_image_placeholder_color"
        tools:background="@color/transparent20"
        tools:layout_height="200dp"
        tools:r_draw_border="true"
        tools:srcCompat="@drawable/lib_ic_succeed" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lib_close_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:background="@drawable/lib_iview_circle_selector"
        android:padding="@dimen/lib_sdpi"
        app:layout_constraintLeft_toLeftOf="@id/lib_image_view"
        app:layout_constraintRight_toRightOf="@id/lib_image_view"
        app:layout_constraintTop_toBottomOf="@id/lib_image_view"
        app:srcCompat="@drawable/lib_iview_close" />

</androidx.constraintlayout.widget.ConstraintLayout>