<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--app主色颜色配置-->
    <color name="colorPrimary">#2d52f2</color>
    <color name="colorPrimaryDark">#2042d7</color>
    <color name="colorAccent">#4467ff</color>

    <!--app功能色配置-->
    <color name="info">#4b7efe</color>
    <color name="success">#44CB5C</color>
    <color name="warning">#febf00</color>
    <color name="error">#ff4d3f</color>
    <color name="fairly">#c3c9cf</color>

    <!--app文本颜色配置-->
    <!--主要文本-->
    <color name="text_primary_color">#161B26</color>
    <!--常规文本-->
    <color name="text_general_color">#182334</color>
    <!--次要文本-->
    <color name="text_sub_color">#ACAFB7</color>
    <!--占位文本-->
    <color name="text_place_color">#aab1bd</color>
    <!--禁用的文本颜色-->
    <color name="text_disable_color">#aab1bd</color>

    <!--app边框颜色配置-->
    <color name="border_primary_color">#dcdde2</color>
    <color name="border_sub_color">#e7e8ec</color>

    <!--app背景色颜色配置-->
    <color name="bg_primary_color">#f4f4f4</color>
    <color name="bg_sub_color">#dedede</color>

    <!--图标强调颜色-->
    <color name="lib_icon_color_accent">@color/colorAccent</color>

    <!--状态栏的颜色-->
    <color name="status_bar_color">#60000000</color>
    <!--导航栏的颜色-->
    <color name="navigation_bar_color">@color/colorPrimary</color>
    <!--API27 底部导航分割线的颜色-->
    <color name="navigation_bar_divider_color">@color/colorPrimary</color>

    <color name="lib_text_color">#333333</color>
    <color name="lib_text_disable_color">#B0B0B0</color>

    <!--app字号选择-->
    <!--主标题-->
    <dimen name="text_primary_size">22dp</dimen>
    <!--大标题-->
    <dimen name="text_main_size">18dp</dimen>
    <!--小标题-->
    <dimen name="text_sub_size">16dp</dimen>
    <!--正文-->
    <dimen name="text_body_size">14dp</dimen>
    <!--辅助文字-->
    <dimen name="text_assist_size">12dp</dimen>
    <dimen name="text_little_size">10dp</dimen>
    <!--最小的文本大小-->
    <dimen name="text_min_size">9dp</dimen>

    <style name="LibPrimaryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:layout_centerVertical">true</item>-->
        <item name="android:textSize">@dimen/text_primary_size</item>
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:textColorHint">@color/text_place_color</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LibMainTextStyle" parent="LibPrimaryTextStyle">
        <item name="android:textSize">@dimen/text_main_size</item>
        <item name="android:textColor">@color/text_general_color</item>
    </style>

    <style name="LibTitleTextStyle" parent="LibMainTextStyle">
        <item name="android:textSize">@dimen/text_sub_size</item>
    </style>

    <style name="LibBodyTextStyle" parent="LibMainTextStyle">
        <item name="android:textSize">@dimen/text_body_size</item>
        <item name="android:textColor">@color/text_general_color</item>
    </style>

    <style name="LibDesTextStyle" parent="LibMainTextStyle">
        <item name="android:textSize">@dimen/text_body_size</item>
        <item name="android:textColor">@color/text_sub_color</item>
    </style>

    <style name="LibSubTextStyle" parent="LibBodyTextStyle">
        <item name="android:textSize">@dimen/text_assist_size</item>
        <item name="android:textColor">@color/text_sub_color</item>
    </style>

    <style name="LibPlaceTextStyle" parent="LibSubTextStyle">
        <item name="android:textSize">@dimen/text_assist_size</item>
        <item name="android:textColor">@color/text_place_color</item>
    </style>

    <!--搜索框的样式-->
    <style name="LibEditSearchStyle" parent="LibBodyTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:imeActionLabel">搜索</item>
        <item name="android:hint">搜索</item>
        <item name="android:drawablePadding">@dimen/lib_hdpi</item>
        <item name="android:paddingLeft">@dimen/lib_xhdpi</item>
        <item name="android:paddingRight">@dimen/lib_xhdpi</item>
    </style>

    <!--单行输入文本-->
    <style name="LibSingleEditStyle" parent="LibEditSearchStyle">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:imeActionLabel">完成</item>
        <item name="android:hint">""</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!--标题栏上图标的样式-->
    <style name="LibTitleIcoStyle">
        <item name="android:layout_width">@dimen/lib_icon_title_size</item>
        <item name="android:layout_height">@dimen/lib_icon_title_size</item>
        <item name="android:padding">@dimen/lib_hdpi</item>
        <item name="android:background">@drawable/lib_bg2_selector</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>