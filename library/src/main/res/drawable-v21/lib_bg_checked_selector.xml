<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/lib_bg_press">

    <!--https://stackoverflow.com/questions/27496916/how-to-set-state-selected-in-ripple-drawable-->
    <item android:id="@android:id/mask">
        <color android:color="@color/lib_white" /> <!-- any color will do -->
    </item>

    <item>
        <selector>
            <item android:state_selected="true">
                <color android:color="@color/lib_bg_press" />
            </item>
        </selector>
    </item>
</ripple>
