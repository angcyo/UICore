<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center_horizontal"
    android:layout_marginTop="@dimen/status_bar_height">

    <FrameLayout
        android:id="@+id/base_toast_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lib_hdpi"
        android:background="@drawable/lib_qq_toast_bg_shape"
        android:elevation="@dimen/lib_elevation"
        android:minHeight="40dp"
        android:paddingLeft="@dimen/lib_xhdpi"
        android:paddingTop="@dimen/lib_xhdpi"
        android:paddingRight="@dimen/lib_xhdpi"
        android:paddingBottom="@dimen/lib_xhdpi">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/lib_elevation"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lib_image_view"
                android:layout_width="@dimen/lib_icon_tip_size"
                android:layout_height="@dimen/lib_icon_tip_size"
                android:layout_marginRight="@dimen/lib_xhdpi"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:src="@drawable/lib_ic_info"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/lib_text_view"
                style="@style/LibBodyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hello" />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>